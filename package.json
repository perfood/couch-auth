{
  "name": "@sl-nx/superlogin-next",
  "version": "0.13.0",
  "description": "The next generation SuperLogin-Fork, rewritten in Typescript and compatible with current versions of Node and CouchDB.",
  "main": "./lib/index.js",
  "exports": {
    "require": "./lib/index.js",
    "default": "./esm/index.js"
  },
  "module": "./esm/index.js",
  "type": "module",
  "files": [
    "lib/",
    "esm/",
    "templates/",
    "config.example.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sl-nx/superlogin-next.git"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha",
    "build": "node_modules/typescript/bin/tsc && echo '{\"type\":\"commonjs\"}' > lib/package.json",
    "build:esm": "node_modules/typescript/bin/tsc --project tsconfig.esm.json",
    "lint": "node_modules/typescript/bin/tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "prepare": "node_modules/typescript/bin/tsc"
  },
  "keywords": [
    "authentication",
    "login",
    "PouchDB",
    "CouchDB",
    "Cloudant",
    "passport",
    "oauth",
    "Facebook",
    "Twitter",
    "Node",
    "Express"
  ],
  "author": "Colin Skow",
  "maintainers": [
    "Fynn Leitow"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sl-nx/superlogin-next/issues"
  },
  "homepage": "https://github.com/sl-nx/superlogin-next#readme",
  "dependencies": {
    "@cloudant/cloudant": "^4.3.0",
    "@sl-nx/couch-pwd": "2.0.0",
    "@sl-nx/sofa-model": "^1.0.1",
    "@types/express": "^4.17.11",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.6",
    "deepmerge": "^4.2.2",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "nodemailer": "^6.5.0",
    "passport": "^0.4.1",
    "passport-http-bearer-sl": "^1.0.1",
    "passport-local": "^1.0.0",
    "urlsafe-base64": "1.0.0",
    "uuid": "^8.3.2"
  },
  "optionalDependencies": {
    "nodemailer-stub-transport": "^1.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/ejs": "^3.0.6",
    "@types/mocha": "^8.2.1",
    "@types/passport-local": "^1.0.33",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "body-parser": "^1.19.0",
    "chai": "^4.3.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^5.1.3",
    "mocha": "^8.3.1",
    "morgan": "^1.10.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "superagent": "^5.3.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  }
}
