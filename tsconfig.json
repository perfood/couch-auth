{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "lib": ["ES2020"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src/**/*"]
}
